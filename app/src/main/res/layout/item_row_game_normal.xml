<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen148dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_width="@dimen/dimen148dp"
           android:layout_height="@dimen/dimen227dp"
           app:cardCornerRadius="@dimen/dimen8dp"
           app:cardBackgroundColor="@android:color/white">
           <ImageView
               android:id="@+id/ivImage"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/img_1"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <TextView
           android:id="@+id/tvTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textFontWeight="500"
           android:textSize="@dimen/text_size_16"
           android:lineHeight="@dimen/dimen22dp"
           android:layout_marginTop="@dimen/dimen5dp"
           android:textColor="@color/text_white"
           android:text=""/>
       <TextView
           android:id="@+id/tvSubTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textFontWeight="400"
           android:textSize="@dimen/text_size_10"
           android:lineHeight="@dimen/dimen14dp"
           android:layout_marginTop="@dimen/dimen5dp"
           android:textColor="@color/text_white"
           android:text=""/>

       <LinearLayout
           android:layout_marginTop="@dimen/dimen5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <me.zhanghai.android.materialratingbar.MaterialRatingBar
               android:id="@+id/rBar"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/dimen17dp"
               app:mrb_fillBackgroundStars="false"
               app:mrb_progressTint="@color/white"
               app:mrb_progressBackgroundTint="@color/white"
               app:mrb_secondaryProgressTint="@color/white"
               android:numStars="5"
               android:stepSize="0.5"
               android:isIndicator="true"
               style="@style/Widget.MaterialRatingBar.RatingBar" />
       </LinearLayout>
      <RelativeLayout
          android:layout_marginTop="@dimen/dimen5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/tvDiscount"
              android:layout_width="@dimen/dimen46dp"
              android:layout_height="@dimen/dimen18dp"
              android:background="@drawable/bg_corner_8"
              android:text=""
              android:textAlignment="center"
              android:textColor="@color/text_white"
              android:textSize="@dimen/text_size_12" />
          <TextView
              android:id="@+id/tvPriceOld"
              android:layout_toEndOf="@+id/tvDiscount"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dimen18dp"
              android:text=""
              android:layout_marginStart="@dimen/dimen10dp"
              android:textSize="@dimen/text_size_12"
              android:textColor="@color/text_gray_400"/>
          <TextView
              android:id="@+id/tvPriceNew"
              android:layout_alignParentEnd="true"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dimen18dp"
              android:text=""
              android:textSize="@dimen/text_size_12"
              android:textColor="@color/text_white">
          </TextView>
      </RelativeLayout>

   </LinearLayout>
</RelativeLayout>