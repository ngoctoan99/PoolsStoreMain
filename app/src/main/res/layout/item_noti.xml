<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradien_color_15"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lorem"
        android:textStyle="bold"
        android:layout_margin="@dimen/dimen15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPointAdd"
        tools:text="16"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimen15dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dimen20dp"
        android:layout_marginStart="@dimen/dimen5dp"
        app:layout_constraintStart_toEndOf="@+id/tvPointAdd"
        app:layout_constraintTop_toTopOf="@+id/tvPointAdd"
        app:layout_constraintBottom_toBottomOf="@+id/tvPointAdd"
        android:layout_height="@dimen/dimen20dp"
        android:id="@+id/ivPoint"
        android:src="@drawable/ic_coin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        tools:text="16:10 09-04-2024"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPointAdd"
        app:layout_constraintBottom_toBottomOf="@+id/tvPointAdd"
        android:textSize="@dimen/text_size_14"
        android:layout_margin="@dimen/dimen15dp"
        android:textColor="@color/text_gray_500"/>

</androidx.constraintlayout.widget.ConstraintLayout>