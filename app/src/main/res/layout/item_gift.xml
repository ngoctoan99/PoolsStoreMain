<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradien_color_15"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        tools:text="Lorem"
        android:layout_margin="@dimen/dimen15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvClaim"

        tools:text="Lorem ipsum dolor sit amet consectetur."
        app:layout_constraintTop_toBottomOf="@+id/tvClaim"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tvClaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Claim"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/dimen20dp"
        android:paddingVertical="@dimen/dimen10dp"
        android:layout_marginHorizontal="@dimen/dimen15dp"
        android:layout_marginTop="@dimen/dimen15dp"
        android:background="@drawable/bg_percent_reduce"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tvClaim"
        app:layout_constraintStart_toStartOf="@+id/tvClaim"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvPoint"
        android:layout_margin="@dimen/dimen15dp"
        tools:text="10 point"
        app:layout_constraintTop_toBottomOf="@+id/tvClaim"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>