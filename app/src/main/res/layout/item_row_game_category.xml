<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen60dp"
    android:background="@drawable/bg_item_row_category_gradient_deep_blue_corner_8"
    android:layout_marginBottom="@dimen/dimen16dp"
    android:orientation="vertical">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.cardview.widget.CardView
           android:layout_width="@dimen/dimen60dp"
           android:layout_height="match_parent"
           app:cardCornerRadius="@dimen/dimen8dp"
           app:cardBackgroundColor="@android:color/white">
           <ImageView
               android:id="@+id/imgCategory"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/img_category_1"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:orientation="vertical"
           android:paddingStart="@dimen/dimen20dp"
           android:weightSum="3"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tvTitle"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:textFontWeight="500"
               android:textSize="@dimen/text_size_16"
               android:lineHeight="@dimen/dimen22dp"
               android:textColor="@color/text_white"
               android:text="Puzzle"/>

       </LinearLayout>

   </LinearLayout>
</RelativeLayout>