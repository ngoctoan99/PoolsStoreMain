<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvNumberStar"
        android:textSize="@dimen/text_size_14"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="1"/>
    <ImageView
        android:id="@+id/ivStar"
        app:layout_constraintStart_toEndOf="@+id/tvNumberStar"
        android:layout_width="@dimen/dimen10dp"
        app:layout_constraintTop_toTopOf="@+id/tvNumberStar"
        app:layout_constraintBottom_toBottomOf="@+id/tvNumberStar"
        android:layout_height="@dimen/dimen10dp"
        android:layout_marginStart="@dimen/dimen2dp"
        android:src="@drawable/ic_star_yellow"/>
    <ProgressBar
        android:id="@+id/processBarRating"
        android:layout_width="match_parent"
        app:layout_constraintStart_toEndOf="@+id/ivStar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constrainedWidth="true"
        android:layout_marginHorizontal="@dimen/dimen10dp"
        app:layout_constraintTop_toTopOf="@+id/tvNumberStar"
        app:layout_constraintBottom_toBottomOf="@+id/tvNumberStar"
        android:layout_height="@dimen/dimen6dp"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="50"
        android:progressDrawable="@drawable/bg_corner_process_bar_15"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@color/yellow"
        />
</androidx.constraintlayout.widget.ConstraintLayout>