<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/tab_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#7CF89F"
                android:endColor="#06C16F"
                android:centerX="0.3276" />
            <corners android:radius="@dimen/dimen10dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/black" />
            <corners android:radius="@dimen/dimen10dp" />
        </shape>
    </item>
</selector>