<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:endColor="@color/stroke_green_end"
                android:startColor="@color/stroke_green_start" />
            <corners android:radius="@dimen/dimen15dp" />
        </shape>
    </item>
    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/dimen15dp" />
            <solid android:color="@color/bg_color" />
        </shape>
    </item>

</layer-list>